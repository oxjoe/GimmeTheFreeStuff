<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="testpackage.Controller">
   <children>
      <Label layoutX="188.0" layoutY="50.0" text="Change link from" />
      <Label layoutX="233.0" layoutY="90.0" text="to" />
      <TextField fx:id="linkTextfield" alignment="CENTER" layoutX="49.0" layoutY="107.0" onKeyPressed="#craigslistTextfieldEnter" prefHeight="25.0" prefWidth="384.0" promptText="Paste Craigslist link here and hit Enter!" />
      <Label layoutX="203.0" layoutY="11.0" text="Settings">
         <font>
            <Font name="Arial" size="20.0" />
         </font>
      </Label>
      <Button fx:id="backButton" layoutX="14.0" layoutY="10.0" mnemonicParsing="false" onAction="#gotoMain" text="Back to Main Screen" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="10.0" />
      <Text fx:id="statusText" layoutX="183.0" layoutY="145.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Press enter to submit" textAlignment="CENTER" />
      <HBox layoutX="133.0" layoutY="156.0" prefHeight="40.0" prefWidth="224.0">
         <children>
            <CheckBox fx:id="refreshCheckbox" mnemonicParsing="false" onAction="#refreshChecked" prefHeight="45.0" prefWidth="116.0" text="Refresh list every" />
            <TextField fx:id="refreshTextfield" prefHeight="40.0" prefWidth="65.0" />
            <Label alignment="CENTER" prefHeight="57.0" prefWidth="51.0" text="minutes" />
         </children>
      </HBox>
      <HBox layoutX="133.0" layoutY="209.0" prefHeight="40.0" prefWidth="248.0">
         <children>
            <CheckBox fx:id="updateCheckbox" mnemonicParsing="false" onAction="#updateChecked" prefHeight="66.0" prefWidth="159.0" text="Check for updates every" />
            <TextField fx:id="updateTextfield" prefHeight="40.0" prefWidth="60.0" />
            <Label alignment="CENTER" prefHeight="55.0" prefWidth="42.0" text="days" />
         </children>
      </HBox>
      <Hyperlink fx:id="currentLink" alignment="CENTER" layoutX="-2.0" layoutY="67.0" onAction="#openCraigslist" prefHeight="23.0" prefWidth="500.0" text="current link" />
      <Hyperlink fx:id="githubLink" layoutX="402.0" layoutY="11.0" onAction="#openGithub" text="GitHub page" />
   </children>
</AnchorPane>
