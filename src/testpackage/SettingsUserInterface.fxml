<AnchorPane fx:id="settings" prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="testpackage.Controller">
   <children>
      <Label layoutX="188.0" layoutY="50.0" text="Change link from" />
      <Text fx:id="currentCraigslistText" layoutX="171.0" layoutY="86.0" strokeType="OUTSIDE" strokeWidth="0.0" text="DEFAULT/PREVIOUS LINK" />
      <Label layoutX="233.0" layoutY="90.0" text="to" />
      <TextField fx:id="newCraigslistTextfield" layoutX="133.0" layoutY="107.0" onKeyPressed="#newCraigslistTextfieldEnter" prefHeight="25.0" prefWidth="214.0" text="new link " />
      <Label layoutX="203.0" layoutY="11.0" text="Settings">
         <font>
            <Font name="Arial" size="20.0" />
         </font>
      </Label>
      <Button fx:id="backButton" layoutX="14.0" layoutY="10.0" mnemonicParsing="false" onAction="#switchScreens" text="Go back to main screen" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="10.0" />
      <Button fx:id="enterNewLinkButton" layoutX="356.0" layoutY="107.0" mnemonicParsing="false" onAction="#changeLinkClicked" text="Enter" />
      <Text fx:id="statusText" layoutX="223.0" layoutY="145.0" strokeType="OUTSIDE" strokeWidth="0.0" text="status" />
      <HBox layoutX="133.0" layoutY="156.0" prefHeight="40.0" prefWidth="224.0">
         <children>
            <CheckBox fx:id="refreshListCheckbox" mnemonicParsing="false" onAction="#refreshListChecked" prefHeight="45.0" prefWidth="116.0" text="Refresh list every" />
            <TextField fx:id="minutesTextfield" prefHeight="50.0" prefWidth="35.0" text="15" />
            <Label alignment="CENTER" prefHeight="57.0" prefWidth="51.0" text="minutes" />
         </children>
      </HBox>
      <HBox layoutX="133.0" layoutY="209.0" prefHeight="40.0" prefWidth="248.0">
         <children>
            <CheckBox fx:id="updatesCheckbox" mnemonicParsing="false" onAction="#updatesChecked" prefHeight="66.0" prefWidth="159.0" text="Check for updates every" />
            <TextField fx:id="daysTextfield" prefHeight="56.0" prefWidth="35.0" text="15" />
            <Label alignment="CENTER" prefHeight="55.0" prefWidth="42.0" text="days" />
         </children>
      </HBox>
   </children>
</AnchorPane>
